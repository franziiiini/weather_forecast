<div class="container">
  <h1 class="my-4">Check your weather</h1>

  <p> Find out more about the weather at your location</p>
    <%= form_with method: :get do |form| %>
      <div class="row">
          <%= form.label :location, "US zip code or city name:*", class: "form-label" %>
        <div class="col-6">
          <%= form.text_field :location, placeholder: "Please enter your zip code or city name" , class: "form-control "%>
          <span class="form-text">
            * Pass US Zipcode, UK Postcode, Canada Postalcode, IP address, Latitude/Longitude 
            (decimal degree) or city name
          </span>
        </div>
        <div class="col-6">
          <%= form.submit "Submit", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>

  <% if @weather_attributes.present?%>
  <h2 class="mt-4"> Your Weather(API) forecast for today</h2>
    <p>The current temperature in <%= @weather_attributes[:location_name]%> is 
      <%= @weather_attributes[:current_temp]%> F.
    </p>
    <p>Expect <%= @weather_attributes[:condition].downcase%> conditions, with a low of 
      <%= @weather_attributes[:min_temp]%> F and a high of 
      <%= @weather_attributes[:max_temp]%> F.
    </p>
  <%end%>
</div>
